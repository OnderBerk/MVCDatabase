@model mvcdatabase.Models.Kisiler
@{
    ViewBag.Title = "Sil";
}

<h2>Kişi Sil</h2>
<hr />
<table>
    <tr>
        <td><b>Ad :</b></td>
        <td>@Model.Ad</td>
    </tr>
    <tr>
        <td><b>Soyad :</b></td>
        <td>@Model.Soyad</td>
    </tr>
    <tr>
        <td><b>Yaş :</b></td>
        <td>@Model.Yas</td>
    </tr>
</table>
<br /><br />
@using (Html.BeginForm())
{
    @Html.HiddenFor(x=>x.ID)
    <div class="input-group">
        <input type="submit" value="Sil" class="btn btn-success" />
    </div>
    <br />
}
    <div class="input-group">
        @if (ViewBag.Result != null)
        {
            <div class="alert alert-@ViewBag.Status" role="alert">
                @ViewBag.Result
            </div>
        }
    </div>




